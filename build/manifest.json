{
  "manifest_version": 2,
  "name": "react-lucid",
  "description": "A devtool for react developers.",
  "version": "1.0",
  "permissions": [
    "*://*/*"
  ],
  "devtools_page": "./devtools/devtools.html",
  "homepage_url": "https://github.com/Gossamer-React/React-Lucid",
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["contentScript.js"]
  }],
  "background": {
    "scripts": [
      "backgroundScript.js",
      "backgroundEventListen.js"
    ],
    "persistent": false
  },
  "web_accessible_resources": [
    "hook.js"
  ],
  "browser_action": {
    "default_icon": "logo.png"
  }
}